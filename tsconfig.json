{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@prisma": ["./prisma/index"]
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
